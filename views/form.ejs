<% include header %>
<div class="all-articles">
  <h2>Create Article</h2>
</div>
<div class="detail-form">
  <form class="update-form" action="/articles" method="POST">
    <input type="text" name="title" placeholder="Heading" />
    <textarea
      name="description"
      placeholder="About this article"
      rows="20"
      cols="50"
    ></textarea>
    <input type="text" name="author" placeholder="author name" />
    <div class="add-comment">
      <input class="input-btn" type="submit" value="Create" />
    </div>
  </form>
</div>

<% include footer %>
