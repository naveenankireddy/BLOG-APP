<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link
      href="https://fonts.googleapis.com/css?family=Libre+Caslon+Text&display=swap"
      rel="stylesheet"
    />
    <script src="https://kit.fontawesome.com/8a0092090f.js" crossorigin="anonymous"></script>
    <title>Article Details</title>
  </head>
  <body>
    <div class="details-section">
      <h3 class="details-title"><%=article.title%></h3>
      <p class="details-description"><%=article.description%></p>
      <p class="details-author">Written By  <%=article.author%></p>
    </div>
    <div class = "details-buttons">
      <a class="btn1 back" href="/articles"><i class="fas fa-hand-point-left"></i></a>
      <a class="btn1 edit" href="/articles/<%=article.id%>/edit"><i class="fas fa-edit"></i></a>
      <a class="btn1 delete" href="/articles/<%=article.id%>/delete"><i class="fas fa-trash"></i></i></a>
      <a class="btn1 likes" href="/articles/<%=article.id%>/likes"><i class="far fa-heart"></i><%=article.likes%> </a>
    </div>
      <div class="details-comments">
        <% article.comments.forEach(comment => { %>
        <div>
          <p>Comment : <%=comment.content%></p>
        </div>
        <p>Author : <%=comment.author%></p>
        <a href="/articles/<%= article.id %>/comments/<%=comment.id%>/delete"><i class="fas fa-trash-alt delete-icon"></i></a>
        <a href="/articles/<%= article.id %>/comments/<%= comment.id %>/edit "><i class="fas fa-edit"></i></a>
        <% }); %>
      </div>
      <div class="detail-form">
        <form action="/articles/<%= article.id %>/comments" method="POST">
          <div class="add-comment">
            <input type="text" name="content" placeholder="Add comment...."/>
            <input type="text" name="author" placeholder="Add Author.." />
          </div>
          <input type="hidden" name="articleId" value="<%=article.id%>" />
          <div class="add-comment">
            <input class="input-btn" type="submit" value="Add Comment" />
          </div>
        </form>
     </div>
  </body>
</html>
